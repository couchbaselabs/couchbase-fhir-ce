<configuration>
    <!-- Remove the status listener now that we've diagnosed -->
    <!-- <statusListener class="ch.qos.logback.core.status.OnConsoleStatusListener" /> -->
    
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- RollingFileAppender for log rotation -->
    <appender name="ROLLING" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/app.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/app-%d{yyyy-MM-dd_HH}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="ROLLING"/>
    </root>

    <!-- Your Couchbase loggers -->
    <logger name="com.couchbase" level="WARN"/>
    <logger name="com.couchbase.client" level="INFO"/>
    <logger name="com.couchbase.core" level="WARN"/>
    <logger name="com.couchbase.io" level="WARN"/>
    <logger name="com.couchbase.endpoint" level="WARN"/>
    <logger name="com.couchbase.node" level="WARN"/>
    <logger name="com.couchbase.transactions" level="WARN"/>
    <logger name="com.couchbase.tracing" level="ERROR"/>
    
    <logger name="com.couchbase.admin" level="DEBUG"/>
    <logger name="com.couchbase.fhir" level="DEBUG"/>
    <logger name="com.couchbase.common" level="DEBUG"/>
    
    <!-- Suppress noisy HAPI FHIR parser warnings -->
    <logger name="ca.uhn.fhir.parser.LenientErrorHandler" level="INFO"/>
    
    <!-- Suppress verbose HAPI FHIR profile loading messages -->
    <logger name="ca.uhn.fhir.context.support.DefaultProfileValidationSupport" level="INFO"/>
    
    <!-- Suppress HAPI FHIR's exception interceptor stack traces - we handle our own clean error logging -->
    <logger name="ca.uhn.fhir.rest.server.interceptor.ExceptionHandlingInterceptor" level="INFO"/>
</configuration>